{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Output settings */
    "outDir": "../../dist/libs/config",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Module and language options */
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* Strict typing and consistency */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,

    /* Monorepo path alias support */
    "baseUrl": ".",
    "paths": {
      "@shamba/*": ["../../libs/*/src"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json", ".env"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"]
}
