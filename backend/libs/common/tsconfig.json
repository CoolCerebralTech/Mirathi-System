{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    /* Output */
    "outDir": "../../dist/libs/common",
    "rootDir": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    /* Module system */
    "module": "CommonJS",
    "target": "ES2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    /* Type safety */
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "forceConsistentCasingInFileNames": true,

    /* Paths â€” for local imports in monorepo */
    "baseUrl": ".",
    "paths": {
      "@shamba/*": ["../../libs/*/src"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"],
  "references": [
    { "path": "../database" }
  ]
}