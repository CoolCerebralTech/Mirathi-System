{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@shamba/common": ["libs/common/src"],
      "@shamba/config": ["libs/config/src"],
      "@shamba/database": ["libs/database/src"],
      "@shamba/auth": ["libs/auth/src"],
      "@shamba/messaging": ["libs/messaging/src"],
      "@shamba/observability": ["libs/observability/src"]
    },
    "outDir": "dist",
    "sourceMap": true,
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}