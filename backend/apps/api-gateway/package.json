{
  "name": "@shamba/api-gateway",
  "version": "1.0.0",
  "description": "API Gateway for Shamba Sure - Single entry point for all microservices",
  "private": true,
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "test": "jest --config ../../jest.config.js --runInBand",
    "test:watch": "jest --config ../../jest.config.js --watch",
    "test:cov": "jest --config ../../jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^7.3.0",
    "@nestjs/throttler": "^5.0.0",
    "@nestjs/terminus": "^11.0.0",
    "express": "^4.21.1",
    "helmet": "^7.2.0",
    "compression": "^1.7.4",
    "csurf": "^1.11.0",
    "express-rate-limit": "^7.3.1",
    "axios": "^1.7.7",
    "rxjs": "^7.8.1",
    "uuid": "^11.0.2",
    "@shamba/common": "workspace:^1.0.0",
    "@shamba/config": "workspace:^1.0.0",
    "@shamba/auth": "workspace:^1.0.0",
    "@shamba/messaging": "workspace:^1.0.0",
    "@shamba/observability": "workspace:^1.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "^4.17.21",
    "@types/compression": "^1.7.5",
    "@types/csurf": "^1.11.5",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/uuid": "^11.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "eslint": "^9.10.0",
    "rimraf": "^6.0.1"
  }
}
