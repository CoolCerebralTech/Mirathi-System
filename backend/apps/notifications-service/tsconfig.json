{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "../../dist/apps/notification-service",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*.spec.ts"],
  "references": [
    { "path": "../../libs/common" },
    { "path": "../../libs/database" },
    { "path": "../../libs/config" },
    { "path": "../../libs/messaging" },
    { "path": "../../libs/observability" }
  ]
}
