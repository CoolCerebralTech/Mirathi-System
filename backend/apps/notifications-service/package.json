{
  "name": "@shamba/notification-service",
  "version": "1.0.0",
  "description": "Notification service for Shamba Sure - Email, SMS, and push notifications",
  "private": true,
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main.js",
    "test": "jest --config ../../jest.config.js --runInBand",
    "test:watch": "jest --config ../../jest.config.js --watch",
    "test:cov": "jest --config ../../jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^7.3.0",
    "nodemailer": "^6.9.15",
    "handlebars": "^4.7.8",
    "africastalking": "^0.6.6",
    "twilio": "^5.3.3",
    "axios": "^1.7.7",
    "html-to-text": "^9.0.5",
    "uuid": "^11.0.2",
    "@shamba/common": "workspace:^1.0.0",
    "@shamba/config": "workspace:^1.0.0",
    "@shamba/database": "workspace:^1.0.0",
    "@shamba/messaging": "workspace:^1.0.0",
    "@shamba/observability": "workspace:^1.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/nodemailer": "^6.4.15",
    "@types/handlebars": "^4.1.0",
    "@types/html-to-text": "^9.0.2",
    "@types/node": "^20.11.30",
    "@types/uuid": "^11.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "eslint": "^9.10.0",
    "rimraf": "^6.0.1"
  }
}
