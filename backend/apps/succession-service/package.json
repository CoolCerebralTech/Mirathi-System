{
  "name": "@shamba/succession-service",
  "version": "1.0.0",
  "description": "Succession service for Shamba Sure - Estate and inheritance planning",
  "private": true,
  "main": "dist/apps/succession-service/main.js",
  "types": "dist/apps/succession-service/main.d.ts",
  "scripts": {
    "build": "nest build succession-service",
    "start": "nest start succession-service",
    "start:dev": "nest start succession-service --watch",
    "start:debug": "nest start succession-service --debug --watch",
    "start:prod": "node dist/apps/succession-service/main.js",
    "test": "jest --config ../../jest.config.js --runInBand",
    "test:watch": "jest --config ../../jest.config.js --watch",
    "test:cov": "jest --config ../../jest.config.js --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register ../../node_modules/.bin/jest --runInBand",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist/apps/succession-service"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/swagger": "^7.3.0",
    "@shamba/auth": "workspace:^1.0.0",
    "@shamba/common": "workspace:^1.0.0",
    "@shamba/config": "workspace:^1.0.0",
    "@shamba/database": "workspace:^1.0.0",
    "@shamba/messaging": "workspace:^1.0.0",
    "@shamba/observability": "workspace:^1.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "nestjs-pino": "^4.4.1",
    "pino-pretty": "^13.1.1",
    "rxjs": "^7.8.1",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "@types/uuid": "^11.0.0",
    "eslint": "^9.10.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3"
  }
}
