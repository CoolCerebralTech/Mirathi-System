{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "root": "apps",
  "sourceRoot": "apps",
  "compilerOptions": {
    "webpack": false,
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      { "include": "**/*.hbs", "outDir": "dist" },
      { "include": "**/*.graphql", "outDir": "dist" },
      { "include": "**/*.proto", "outDir": "dist" }
    ],
    "watchAssets": true
  },
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.json"
      }
    },
    "accounts-service": {
      "type": "application",
      "root": "apps/accounts-service",
      "entryFile": "main",
      "sourceRoot": "apps/accounts-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/accounts-service/tsconfig.json"
      }
    },
    "succession-service": {
      "type": "application",
      "root": "apps/succession-service",
      "entryFile": "main",
      "sourceRoot": "apps/succession-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/succession-service/tsconfig.json"
      }
    },
    "documents-service": {
      "type": "application",
      "root": "apps/documents-service",
      "entryFile": "main",
      "sourceRoot": "apps/documents-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/documents-service/tsconfig.json"
      }
    },
    "notification-service": {
      "type": "application",
      "root": "apps/notification-service",
      "entryFile": "main",
      "sourceRoot": "apps/notification-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/notification-service/tsconfig.json"
      }
    },
    "auditing-service": {
      "type": "application",
      "root": "apps/auditing-service",
      "entryFile": "main",
      "sourceRoot": "apps/auditing-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auditing-service/tsconfig.json"
      }
    },
    "@shamba/common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.json"
      }
    },
    "@shamba/database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.json"
      }
    },
    "@shamba/auth": {
      "type": "library",
      "root": "libs/auth",
      "entryFile": "index",
      "sourceRoot": "libs/auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/auth/tsconfig.json"
      }
    },
    "@shamba/config": {
      "type": "library",
      "root": "libs/config",
      "entryFile": "index",
      "sourceRoot": "libs/config/src",
      "compilerOptions": {
        "tsConfigPath": "libs/config/tsconfig.json"
      }
    },
    "@shamba/messaging": {
      "type": "library",
      "root": "libs/messaging",
      "entryFile": "index",
      "sourceRoot": "libs/messaging/src",
      "compilerOptions": {
        "tsConfigPath": "libs/messaging/tsconfig.json"
      }
    },
    "@shamba/observability": {
      "type": "library",
      "root": "libs/observability",
      "entryFile": "index",
      "sourceRoot": "libs/observability/src",
      "compilerOptions": {
        "tsConfigPath": "libs/observability/tsconfig.json"
      }
    }
  }
}