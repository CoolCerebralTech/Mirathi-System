// ============================================================================
// ENTITY: POLYGAMOUS HOUSE (Section 40 - Succession Act)
// ============================================================================
model PolygamousHouse {
  id            String   @id @default(uuid()) @db.Uuid
  
  familyId      String   @db.Uuid
  family        Family   @relation(fields: [familyId], references: [id], onDelete: Cascade)
  
