model Will {
  id                     String   @id @default(uuid()) @db.Uuid()
  // --- Testator Identity ---
  testatorId             String   @db.Uuid() 
  testator               User     @relation("TestatorWills", fields: [testatorId], references: [id])
  // --- Lifecycle ---
  status                 WillStatus @default(DRAFT)
  type                   WillType   @default(STANDARD)
  versionNumber          Int        @default(1)
// Revocation Tracking
  isRevoked        Boolean           @default(false)
  revocationMethod RevocationMethod?
  revokedAt        DateTime?
  // Self-Relations for Superseding
  supersedesWillId       String? @unique @db.Uuid()
  supersededByWillId     String? @unique @db.Uuid()
  supersededWill         Will?      @relation("WillSupersession", fields: [supersedesWillId], references: [id])
  supersededBy           Will[]     @relation("WillSupersession")
  // Execution Details
  executionDate DateTime? // Mapped from ExecutionDate VO
  // --- Instructions ---
  funeralWishes          String?  @db.Text
  burialLocation         String?
  residuaryClause        String?  @db.Text // "Everything else goes to..."
  // Metadata
  storageLocation        String?
  probateCaseNumber      String?

  // Validation State
  isValid                Boolean  @default(false)
  validationErrors       String[]
  // Value Objects (Stored as JSON)
  // Stores { riskLevel, status, notes, ... }
  capacityDeclaration    Json?
  // Timestamps
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  // --- Aggregate Members ---
  executors              WillExecutor[]
  witnesses              WillWitness[]
  beneficiaryAssignments WillBequest[]
  codicils               Codicil[]
  disinheritanceRecords  DisinheritanceRecord[]
  documents              Document[]
  @@index([testatorId, status])
  @@map("wills")
}
